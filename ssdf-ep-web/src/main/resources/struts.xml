<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>

    <package name="ssdf" extends="tiles-default" namespace="/">
        <action name="index">
            <result type="tiles">index</result>
        </action>

        <action name="learn-to-dive" class="se.ssdf.elearning.web.portal.LearnToDiveAction">
            <result type="tiles">learn-to-dive</result>
        </action>
        <action name="continue-your-journey" class="se.ssdf.elearning.web.portal.ContinueYourJourneyAction">
            <result type="tiles">continue-your-journey</result>
        </action>
        <action name="become-instructor" class="se.ssdf.elearning.web.portal.BecomeInstructorAction">
            <result type="tiles">become-instructor</result>
        </action>
        <action name="start-a-club" class="se.ssdf.elearning.web.portal.StartClubAction">
            <result type="tiles">start-a-club</result>
        </action>

        <action name="login" class="se.ssdf.elearning.web.portal.LoginAction">
            <result type="tiles">login</result>
        </action>

        <action name="loginfailed" class="se.ssdf.elearning.web.portal.LoginAction">
            <result type="tiles">login?error=true</result>
        </action>
    </package>

    <package name="secure" extends="tiles-default" namespace="/secure">
        <action name="welcome" class="se.ssdf.elearning.web.portal.LearnToDiveAction">
            <result type="tiles">secure/welcome</result>
        </action>
    </package>
</struts>